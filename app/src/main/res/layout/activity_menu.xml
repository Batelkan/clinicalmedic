<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtdato"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context=".menu">

    <Button
        android:id="@+id/btnregistrarcita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="registro"
        android:text="@string/btnregistrarcita"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="50dp"
        android:textColor="#039be5"
        android:background="@drawable/layoutroundet_bg"
        tools:layout_editor_absoluteY="334dp" />

    <Button
        android:id="@+id/btnvercitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ver"
        android:text="@string/btnmostrarcitas"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="241dp"
        android:textColor="#039be5"
        android:background="@drawable/layoutroundet_bg"
        tools:layout_editor_absoluteY="334dp" />

    <Button
        android:id="@+id/btnhospitales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="mapa"
        android:text="@string/btnubicaciones"
        android:textColor="#039be5"
        android:background="@drawable/layoutroundet_bg"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="466dp" />

    <Button
        android:id="@+id/btnacercade"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="acercade"
        android:text="@string/btnacercade"
        android:textColor="#039be5"
        android:background="@drawable/layoutroundet_bg"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="466dp" />
</LinearLayout>